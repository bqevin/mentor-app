<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
   <head profile="http://gmpg.org/xfn/11">
      
<title>Mentor001 | Log In &amp; Sign Up</title>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.css" type="text/css" media="all">

<link href='http://fonts.googleapis.com/css?family=Roboto:900,900italic,500,400italic,100,700italic,300,700,500italic,100italic,300italic,400' rel='stylesheet' type='text/css'>

<link href="../css/bootstrap.min.css" rel="stylesheet">

<!-- Material Design Bootstrap -->
<link href="../css/mdb.min.css" rel="stylesheet">

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        
<script type="text/javascript">//<![CDATA[ 
$(window).load(function(){
$('.form-control').on('focus blur', function (e) {
    $(this).parents('.form-group').toggleClass('focused', (e.type === 'focus' || this.value.length > 0));
}).trigger('blur');
});//]]>  
</script>

<!-- Custom CSS -->
<link rel="stylesheet" type="text/css" href="../css/style.css">

<style type="text/css">
  body{
    height: 100%; 
    overflow: hidden; 
    width: 100% !important;
  }
  .control-label{
    margin-top: -5px;
  }
  .btn-text{
    margin-left: 10px;
    line-height: 2;
  }
  .alert{
    position: absolute; 
    z-index: 10000; 
    width: 100%; 
    text-align: center; 
    padding-top: 20px; 
    font-weight: bold;
  }
  .sign-with{
    margin-top: 30px; 
    float: left; 
    margin-left: 40px;
  }
</style>
</head>  
<body >
<!-- show any messages that come back with authentication -->

<% if (message.length > 0) { %>
    <div class="alert alert-danger "><%= message %></div>
<% } %>
<div id="fback"><div class="girisback"></div><div class="kayitback"></div></div>
        
      <div id="textbox">
         <div class="toplam">
                
            <div class="left">
              <div id="ic" style="top: 45%;">
               <h2>Sign Up</h2>
                  <form id="girisyap" name="signup_form" id="signup_form" method="post" action="/mentor/signup" enctype="multipart/form-data">

               <div class="sn form-group">
                       <label class="control-label" for="inputNormal">Full Name</label>
                       <input type="text" name="name" id="field_1" class="bp-suggestions form-control" cols="50" rows="10"/>
               </div>
               <div class="form-group">
                       <label class="control-label" for="inputNormal">Email</label>
                       <input type="text" name="email" id="signup_email" class="bp-suggestions form-control" cols="50" rows="10"/>
               </div>


               <div class="yarim form-group">
                       <label class="control-label" for="inputNormal">Date of Birth</label>
                       <input type="date" name="dob" id="date" class="bp-suggestions form-control" cols="50" rows="10" />
               </div>


               <div class="form-group">
                       <label class="control-label" for="inputNormal">Password</label>
                       <input type="password" name="password" id="signup_password" value="" class="bp-suggestions form-control" cols="50" rows="10" />
               </div>
               <div class="form-group soninpt">
                     <label class="control-label" for="inputNormal">Confirm Password</label>
                     <input type="password" name="password_2" id="field_2" class="bp-suggestions form-control" cols="50" rows="10"/>
               </div>

               <input type="submit" name="signup_submit" id="signup_submit" value="Sign Up" class="girisbtn"  />
               </form>
                <button id="moveright">Log In</button>

                <div class="form-group sign-with">
                <a class="btn btn-default red" href="/mentor/auth/google"><i class="fa fa-google-plus fa-lg"></i><span class="btn-text">Google</span></a>
                <a class="btn btn-default" href="/mentor/auth/facebook" style="background: #0d47a1"><i class="fa fa-facebook fa-lg"></i><span class="btn-text">Facebook</span></a>
                </div>
            </div>
            </div>
            

            <div class="right">
            <div id="ic">
               <h2>Login</h2>
               
               <form name="login-form" id="girisyap" id="sidebar-user-login" method="post" action="/mentor/getin">

               <div class="form-group">
                       <label class="control-label" for="inputNormal">Email</label>
                          <input type="text" name="email" class="bp-suggestions form-control" cols="50" rows="10" ></input>
               </div>
               <div class="form-group soninpt">
                       <label class="control-label" for="inputNormal">Password</label>
                          <input type="password" name="password" class="bp-suggestions form-control" cols="50" rows="10"></input>
               </div>
               <input type="submit" value="Login" class="girisbtn" tabindex="100" />
               </form>

               <button id="moveleft">Sign Up</button>
                </div>

            </div>
         </div>
      </div>

      <script type="text/javascript" >
      $(document).ready(function() {

        $('#moveleft').click(function() {
            $('#textbox').animate({
            'marginLeft' : "0" //moves left
            });
            
            $('.toplam').animate({
            'marginLeft' : "100%" //moves right
            });
        });
        
        $('#moveright').click(function() {
            $('#textbox').animate({
            'marginLeft' : "50%" //moves right
            });
            
            $('.toplam').animate({
            'marginLeft' : "0" //moves right
            });
        });
        
    });

      </script>
   </body>
</html>
</body>
